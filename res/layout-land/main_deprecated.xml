    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/bSumar"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/sumas" />

            <Button
                android:id="@+id/bRestar"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/restas" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/bMultiplicar"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/multiplicaciones" />

            <Button
                android:id="@+id/bDividir"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/divisiones" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/bTodasOperaciones"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/todas_operaciones" />

            <Button
                android:id="@+id/bPremios"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/premios" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/bReiniciar"
                style="@style/button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/reiniciar" />
        </TableRow>
    </TableLayout>
